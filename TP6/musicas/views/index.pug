extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-amber
                h2.w3-center Gestão de Músicas
                center
                    img(src='http://www.pngmart.com/files/3/Music-PNG-Photos.png' style='width:120px; height:120px;')
            .w3-container
                h4.w3-blue.w3-center Registar Música
                form.w3-contairner(action='/musica' method ='POST')
                    label
                        b Província
                    input.w3-input.w3-border.w3-light-grey(type='text' name='prov' required)
                    label
                        b Local
                    input.w3-input.w3-border.w3-light-grey(type='text' name='local' required)
                    label
                        b Título
                    input.w3-input.w3-border.w3-light-grey(type='text' name='tit' required)
                    label
                        b Músico
                    input.w3-input.w3-border.w3-light-grey(type='text' name='musico' required)
                    label
                        b Duração
                    input.w3-input.w3-border.w3-light-grey(type='time' name='duracao' required)
                    label 
                        b Instrumentos
                    input.w3-input.w3-border.w3-light-grey(type='text' name='inst')
                    button(class="fas fa-angle-double-right" type="submit" style="background-color: DodgerBlue; color: white; padding: 22px 22px; border-radius: 12px;").w3-hover-green Adicionar
            .w3-container
                h4.w3-blue.w3-center Lista de Músicas
                table.w3-table-all
                    tr.w3-gray
                        th Província
                        th Local
                        th Título
                        th Músico
                        th Duração
                        th Editar
                        th Apagar
                        each m, index in lista
                            tr.w3-light-gray
                                td=m.prov
                                td=m.local
                                td=m.tit
                                td=m.musico
                                td=m.duracao
                                td
                                    form.w3-contairner(action='/'+index method ='GET')
                                        button(class="fas fa-tools" type="submit" style="background-color: DodgerBlue; color: white; padding: 22px 22px; border-radius: 12px;").w3-hover-red
                                td
                                    button(onclick="apagaMusica('" + index + "')" class="fa fa-trash" style="background-color: DodgerBlue; color: white; padding: 22px 22px; border-radius: 12px;").w3-hover-red
            footer.w3-container.w3-amber
