extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-amber
                h2.w3-center Movie Management
                center
                    img(src='https://carlisletheacarlisletheatre.org/images/movie-icon-transparent-background-3.png' style='width:120px; height:120px;')
            .w3-container
                h4.w3-black.w3-center Add New Movie
                .w3-container
                    label
                        b Title
                    input.w3-input.w3-border.w3-light-grey(type='text' name='title' id='title' required)
                    label
                        b Year
                    input.w3-input.w3-border.w3-light-grey(type='number' name='year' id='year' required)
                    label
                        b Actors
                    table.w3-table-all(id="atores" name='cast')
                    input.w3-input.w3-border.w3-light-grey(type='text' name='actor' id='actor')
                    button(type= 'button' class="fa fa-plus-square" onclick="addActorA()" style="background-color: black; color: #FFBF00; padding: 15px 15px; border-radius: 12px;").w3-hover-green    Add
                    p
                    label
                        b Genres
                    table.w3-table-all(id="generos" name='genres')
                    input.w3-input.w3-border.w3-light-grey(type='text' name='genre' id='genre' )
                    button(type= 'button' class="fa fa-plus-square" onclick="addGenreA()" style="background-color: black; color: #FFBF00; padding: 15px 15px; border-radius: 12px;").w3-hover-green    Add
                    p
                    button(class="fas fa-plus-square" onclick="createMovie()" style="background-color: #FFBF00; color: black; padding: 22px 22px; border-radius: 12px;  position:relative; transition: .5s ease; left: 90%;").w3-hover-green    Add New Movie
            .w3-container
                h4.w3-black.w3-center Movie List
                table.w3-table-all
                    tr.w3-amber
                        th Title
                        th Year
                        th View
                        th Delete
                        each f in lista
                            tr.w3-light-gray
                                td=f.title
                                td=f.year
                                td
                                    form(action="/filmes/"+f._id)
                                        button(type='submit' class="fas fa-eye" style="background-color: black; color: white; padding: 22px 22px; border-radius: 12px;").w3-hover-amber
                                td
                                    button(type='button' onclick="apagaFilme('" + f._id + "')" class="fa fa-trash" style="background-color: black; color: white; padding: 22px 22px; border-radius: 12px;").w3-hover-red
            footer.w3-container.w3-amber
