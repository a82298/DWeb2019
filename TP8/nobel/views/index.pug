extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h2.w3-center Home Page - Premios Nobel
                center
                    img(src='https://upload.wikimedia.org/wikipedia/en/e/ed/Nobel_Prize.png' style='width:120px; height:120px;')
            .w3-container
                h4.w3-amber.w3-center Opções
                .w3-container
                    form(action="/premios/").w3-center
                        label
                            b Categoria (opcional)
                        input.w3-input.w3-border.w3-light-grey(type='text' name='categoria' id='categoria')
                        label
                            b Ano (opcional, superior a este valor)
                        input.w3-input.w3-border.w3-light-grey(type='text' name='data' id='data')
                        button(type='submit' style="background-color: #FFBF00; color: black; padding: 22px 22px; border-radius: 12px;").w3-hover-teal Listar Premios
                .w3-container
                    form(action="/premios/categorias").w3-center
                        button(type='submit' style="background-color: #FFBF00; color: black; padding: 22px 22px; border-radius: 12px;").w3-hover-teal Listar Categorias
                .w3-container    
                    form(action="/premios/laureados").w3-center
                        button(type='submit' style="background-color: #FFBF00; color: black; padding: 22px 22px; border-radius: 12px;").w3-hover-teal Listar Laureados
            footer.w3-container.w3-teal
