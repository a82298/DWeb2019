extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-amber
                h1.w3-center= "Informações sobre a entidade " + dados.sigla
            .w3-container
                label="Designação: " + dados.designacao
                p
                label="Estado: " + dados.estado
                p
                label="SIOE: " + dados.sioe
                p
                if dados.internacional != ''
                    label="Internacional: " + dados.internacional
                hr
            if tipologias.length > 0
                .w3-container
                    h3.w3-center Lista de Tipologias pertencentes à entidade
                    table.w3-table-all.w3-centered
                        tr
                            th Sigla
                            th Designação
                            th Ver Tipologia
                            each t in tipologias
                                tr.w3-light-gray
                                    td=t.sigla
                                    td=t.designacao
                                    td
                                        form(action="/tipologias/"+t.id)
                                            button(type='submit' class="fas fa-eye" style="background-color: black; color: white; padding: 22px 22px; border-radius: 12px;").w3-hover-amber
                    hr
            if donos.length > 0
                .w3-container
                    h3.w3-center Lista do qual a entidade é dona
                    table.w3-table-all.w3-centered
                        tr
                            th Código
                            th Título
                            th Ver
                            each d in donos
                                tr.w3-light-gray
                                    td=d.codigo
                                    td=d.titulo
                                    td
                                        form(action="/classes/"+d.codigo)
                                            button(type='submit' class="fas fa-eye" style="background-color: black; color: white; padding: 22px 22px; border-radius: 12px;").w3-hover-amber
                    hr
            if participantes.length > 0
                .w3-container
                    h3.w3-center Lista do qual a entidade participa
                    table.w3-table-all.w3-centered 
                        tr
                            th Código
                            th Tipo de Participante
                            th Título
                            th Ver
                            each p in participantes
                                tr.w3-light-gray
                                    td=p.codigo
                                    td=p.tipoPar
                                    td=p.titulo
                                    td
                                        form(action="/classes/"+p.codigo)
                                            button(type='submit' class="fas fa-eye" style="background-color: black; color: white; padding: 22px 22px; border-radius: 12px;").w3-hover-amber
                    hr
            .w3-container
                form(action="/").w3-center
                    button(type='submit' class="fa fa-home" style="background-color: black; color: #FFBF00; padding: 22px 22px; border-radius: 12px;").w3-hover-amber    Página Inicial
            footer.w3-container.w3-amber
