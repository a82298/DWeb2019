extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-amber
                h1.w3-center Lista de Entidades
            if lista.length > 0
                .w3-container
                    table.w3-table-all
                        tr
                            th Sigla
                            th Designação
                            each e in lista
                                tr.w3-light-gray
                                    td=e.sigla
                                    td=e.designacao
                                    td
                                        form(action="/"+e.id)
                                            button(type='submit' class="fas fa-eye" style="background-color: black; color: white; padding: 22px 22px; border-radius: 12px;").w3-hover-amber
                    hr
            footer.w3-container.w3-amber
