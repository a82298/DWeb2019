extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-amber
                h1.w3-center= "Informações sobre o processo com código " + dados.codigo
            .w3-container
                label="Título: " + dados.titulo
                p
                label="Nível: " + dados.nivel
                p
                label="Descrição: " + dados.descricao
                if dados.pai != null
                    p
                    label="Processo Pai: " + dados.pai.titulo
                    //form(action="/classes/"+d.codigo)
                            button(type='submit' class="fas fa-eye" style="background-color: black; color: white; padding: 22px 22px; border-radius: 12px;").w3-hover-amber
                p
                label="Estado: " + dados.status
                if dados.filhos.length > 0
                    .w3-container
                        h3.w3-center Processos Filhos
                        table.w3-table-all.w3-centered
                            tr
                                th Código
                                th Título
                                th Ver
                                each d in dados.filhos
                                    tr.w3-light-gray
                                        td=d.codigo
                                        td=d.titulo
                                        td
                                            form(action="/classes/"+d.codigo)
                                                button(type='submit' class="fas fa-eye" style="background-color: black; color: white; padding: 22px 22px; border-radius: 12px;").w3-hover-amber
                            hr
            .w3-container.w3-center
                button(type='button' style="background-color: black; color: #FFBF00; padding: 22px 22px; border-radius: 12px; " onclick="javascript:history.go(-1)").w3-hover-amber.w3-center    Voltar
            .w3-container
                form(action="/").w3-center
                    button(type='submit' class="fa fa-home" style="background-color: black; color: #FFBF00; padding: 22px 22px; border-radius: 12px;").w3-hover-amber    Página Inicial
            footer.w3-container.w3-amber
